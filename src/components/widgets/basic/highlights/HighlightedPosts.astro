---
import Picture from "@components/core/Picture.astro";
import Post from "./Post.astro";
const { title, description } = Astro.props;

const SINT_SIT =
  "Sint sit cillum pariatur eiusmod nulla pariatur ipsum. Sit laborum anim qui mollit tempor pariatur nisi minim dolor. Aliquip et adipisicing sit sit fugiat";

const NIBH_SENECTUS =
  "Nibh senectus lacinia volutpat nostra taciti ac posuere, dictum ultricies dictumst luctus in vehicula, mus molestie venenatis penatibus ridiculus elementum. Phasellus sollicitudin dignissim parturient. ";

const ORNARE =
  "Ornare cum cursus laoreet sagittis nunc fusce posuere per euismod dis vehicula a, semper fames lacus maecenas dictumst pulvinar neque enim non potenti. Torquent hac sociosqu eleifend potenti. ";
---

<section class="px-4 py-16 mx-auto max-w-6xl lg:py-20">
  <div class="flex flex-col mb-6 lg:justify-between lg:flex-row md:mb-8">
    <h2
      class="max-w-lg mb-2 font-sans text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none lg:mb-5 group"
    >
      {
        (title && title.firstLine && title.secondLine && (
          <span class="inline-block mb-1 sm:mb-4">
            {title.firstLine}
            <br class="hidden md:block" />
            {title.secondLine}
          </span>
        )) || <span class="inline-block mb-1 sm:mb-4">{title.firstLine}</span>
      }
    </h2>
    <p class="text-gray-700 dark:text-slate-400 lg:text-sm lg:max-w-md">
      {description}
    </p>
  </div>

  <div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-4 -mb-6">
    <Post
      pictureSrc={import("~/assets/images/steps.jpg")}
      pictureAltText="Post 1 Image"
      title="Get started with AstroWind to create a website using Astro and Tailwind CSS"
      href="/blog/get-started-website-with-astro-tailwind-css"
      description={SINT_SIT}
    />

    <Post
      pictureSrc={import("~/assets/images/colors.jpg")}
      pictureAltText="Post 2 Image"
      title="How to customize AstroWind template to suit your branding"
      href="/blog/how-to-customize-astrowind-to-your-brand"
      description={SINT_SIT}
    />

    <Post
      pictureSrc={import("~/assets/images/tools.jpg")}
      pictureAltText="Post 3 Image"
      title="Useful tools and resources to create a professional website"
      href="/blog/useful-resources-to-create-websites"
      description={NIBH_SENECTUS}
    />

    <Post
      pictureSrc={import("~/assets/images/hero.jpg")}
      pictureAltText="Post 4 Image"
      title="AstroWind template in depth"
      href="/blog/astrowind-template-in-depth"
      description={ORNARE}
    />
  </div>
</section>
