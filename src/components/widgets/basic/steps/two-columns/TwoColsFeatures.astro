---
import { LOREM_115 } from "~/utils/loremIpsum";
import SectionHeader from "../../SectionHeader.astro";
import Feature from "./Feature.astro";
import FeaturePane from "./FeaturePane.astro";

const {} = Astro.props;
---

<section
  class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20 bg-blue-50 dark:bg-slate-800"
>
  <SectionHeader
    title="Features"
    description="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque rem aperiam, eaque ipsa quae."
  >
    <h2
      class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4"
    >
      What's interesting about <span
        class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-pink-500 whitespace-nowrap"
        >AstroWind
      </span>
    </h2>
  </SectionHeader>
  <div class="grid mx-auto space-y-6 md:grid-cols-2 md:space-y-0">
    <FeaturePane>
      <Feature title="Integration with Tailwind CSS" description={LOREM_115} />
      <Feature title="Ready-to-use Components" description={LOREM_115} />
      <Feature title="Best Practices" description={LOREM_115} />
    </FeaturePane>
    <FeaturePane>
      <Feature title="Excelent Page Speed" description={LOREM_115} />
      <Feature title="Frequently updated" description={LOREM_115} />
      <Feature
        title="Open to new ideas and contributions "
        description={LOREM_115}
      />
    </FeaturePane>
  </div>
</section>
